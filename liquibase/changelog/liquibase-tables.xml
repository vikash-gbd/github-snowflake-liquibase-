<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <!-- Auto-include all .sql files under table/ -->
    <includeAll
        path="../../ddl/DEMO_SCHEMA/table"
        relativeToChangelogFile="true"
        errorIfMissingOrEmpty="false"
        resourceFilter=".*\.sql" />

    <!-- Auto-include all .sql files under function/ -->
    <includeAll
        path="../../ddl/DEMO_SCHEMA/function"
        relativeToChangelogFile="true"
        errorIfMissingOrEmpty="false"
        resourceFilter=".*\.sql" />

    <!-- Auto-include all .sql files under view/ -->
    <includeAll
        path="../../ddl/DEMO_SCHEMA/view"
        relativeToChangelogFile="true"
        errorIfMissingOrEmpty="false"
        resourceFilter=".*\.sql" />

</databaseChangeLog>
